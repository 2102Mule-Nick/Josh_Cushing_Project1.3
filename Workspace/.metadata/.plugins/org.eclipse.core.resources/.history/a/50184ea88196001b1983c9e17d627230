package com.staykeep.dao;

import java.util.List;

import com.staykeep.pojo.Guest;

//Interface for handling Database functions concerning Stay objects.
public interface GuestDao {
	
	// Abstract method for getting all Guest objects.
	public List<Guest> getAllGuests();
	
	// Abstract method for getting a Guest with a certain guest id.
	// Returns a Guest object.
	public Guest getGuestInfoById(int g_id);

	// Abstract method for setting guest first name given the guest id.
	// Returns a boolean.
	public boolean setGuestFname(String f_name, int g_id);

	// Abstract method for setting guest last name given the guest id.
	// Returns a boolean.
	public boolean setGuestLname(String l_name, int g_id);

	// Abstract method for setting guest credit card number name given the guest id.
	// Returns a boolean.
	public boolean setGuestCcnum(String cc_num, int g_id);

	// Abstract method for inserting a new guest into the database.
	// Returns a boolean.
	public boolean createNewGuest(String f_name, String l_name, String cc_num);
	
	// Abstract method for deleting a guest from the database.
	// Returns a boolean.
	public boolean deleteGuest(int g_id);
}
