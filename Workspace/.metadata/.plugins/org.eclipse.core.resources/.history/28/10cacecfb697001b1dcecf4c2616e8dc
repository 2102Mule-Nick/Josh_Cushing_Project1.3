	@Override
	public List<Reservation> getAllRes() {
		final String URL = "http://localhost:8081/staykeep/reservation";
		Reservation[] reservation = restTemplate.getForObject(URL, Reservation[].class);
		return Arrays.asList(reservation);
	}

