package com.frontdesk.service;

import java.util.Arrays;
import java.util.List;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;
import com.frontdesk.pojo.Guest;
import com.frontdesk.pojo.Room;

@Service
public class GuestServiceFinder implements GuestService {
	
	//Rest template for easy serialization
	RestTemplate restTemplate;
	
	//Auto-wired setter. Nothing calls this.
	@Autowired
	public void setRestTemplate(RestTemplate restTemplate) {
		this.restTemplate = restTemplate;
	}
	
//-----------------------------------------------------------------------
	
	// Service method that requests staykeep to return a list of all guests.
	@Override //(Y)
	public List<Guest> getAllGuests() {
		final String URL = "http://localhost:8081/staykeep/guest";
		Guest[] guest = restTemplate.getForObject(URL, Guest[].class);
		return Arrays.asList(guest);
	}

	// Method that requests the return of a specific guest by id.
	@Override
	public Guest getGuestInfoById(Guest guest) {
		final String URL = "http://localhost:8081/staykeep/guest/gibi";
		return restTemplate.getForObject(URL, Guest.class);
	}
/*
	// Method that requests staykeep to create a new room.	
	@Override
	public void createNewRoom(Room room) {
		final String URL = "http://localhost:8081/staykeep/room";
		restTemplate.postForEntity(URL, room, null);
	}
*/
	// Method that requests a new guest be made.
	@Override
	public void createNewGuest(Guest guest) {
		final String URL = "http://localhost:8081/staykeep/guest";
		restTemplate.postForEntity(URL, guest, null);
	}
	
	// Method that requests the deletion of a specific guest by id.
	@Override
	public void deleteGuest(int g_id) {
		final String URL = "http://localhost:8081/staykeep/guest/" + g_id;
		restTemplate.delete(URL, Guest.class);
	}
	
	// Method that requests the first name change of a specific guest by id.
	@Override
	public void setGuestFname(String f_name, int g_id) {
		final String URL = "http://localhost:8081/staykeep/guest/" + g_id + "/f/" + f_name;
		restTemplate.put(URL, null);
	}
	
	// Method that requests the last name change of a specific guest by id.
	@Override
	public void setGuestLname(String l_name, int g_id) {
		final String URL = "http://localhost:8081/staykeep/guest/" + g_id + "/l/" + l_name;
		restTemplate.put(URL, null);
	}
	
	// Method that requests the credit card number change of a specific guest by id.
	@Override
	public void setGuestCcnum(String cc_num, int g_id) {
		final String URL = "http://localhost:8081/staykeep/guest/" + g_id + "/payment/" + cc_num;
		restTemplate.put(URL, null);
	}
}
